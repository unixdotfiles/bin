(cd ~/bin && git pull --rebase && git submodule update --init --recursive)
while true; do sudo -v; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &
sudo -H port selfupdate
sudo -H port upgrade outdated
sudo -H pkg upgrade
gem update --user-install
sudo npm -g update
apm update
cabal update
pip install --user -U $(pip list --format=legacy --outdated | awk '!/Could not|ignored/ {print $1}')
#cpan -u
vim -i NONE +VundleUpdate +qa
rustup update
