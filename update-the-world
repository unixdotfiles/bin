#!/bin/sh
set -x

quit() {
  exit 1
}

__exists () {
  while [ -n "$1" ];
  do
    cmd="$1"; shift
    which "$cmd" >/dev/null 2>&1 || return 1
  done
  return 0;
}

__sudo() {
  if [ -n "$doroot" ]
  then
    sudo "$@"
  fi
}

trap quit INT

config_only=
mac=1
selfupdate=1
doroot=1
freebsd=1
while getopts cFMRS flag
do
  case $flag in
  c)  config_only=1
    ;;
  F)  freebsd= ;;
  R)  doroot= ;;
  M)  mac= ;;
  S)  selfupdate= ;;
  ?)  printf "Usage: %s: [-cMRS] ...\n" "$0"
      exit 2;;
  esac
done

shift "$((OPTIND - 1))"

for repo in ~/bin ~/misc-scripts ~/.conf ~/global
do
  (
    cd "$repo" &&
    git pull --rebase &&
    git submodule update --init --recursive &&
    git push
    )
done

if [ -n "$selfupdate" ]
then
  exec "$0" -S "$@";
fi

(cd ~/bin && ./submodules/update.sh)

if [ -n "$config_only"  ]
then
  exit 0
fi

_pip_update() {
  pip="$1"
  __exists "$pip" && "$pip" install --user -U $("$pip" | awk '!/Package|---/{ print $1}')
}

while true; do __sudo -v; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &
if [ "$(uname -s)" = "Darwin" ]
then
  if [ -n "$mac" ]
  then
    #printf "y\nd\n"|__sudo -H port reclaim
    __sudo -H port selfupdate
    port outdated
    __sudo -H port -u upgrade outdated
    softwareupdate -i -a --verbose
    mas upgrade
    mac-update
  fi
elif [ "$(uname -s)" = "Linux" ]
then
  __exists apt-get && __sudo -H apt-get update
  __exists apt-get && __sudo -H apt-get dist-upgrade
  __exists yum && __sudo -H yum upgrade
  __exists pacman && __sudo -H pacman -Syu
  __exists emerge && __sudo -H emerge --update --deep world
else
  if [ -n "$freebsd" ]
  then
    if [ -d /srv/src/freebsd/ports ]
    then
      (cd /srv/src/freebsd/ports && git pull --rebase)
      sudo poudriere bulk -j amd64-matches-host -p development $(pkg query -e '%a=0' '%o') || true
    fi
    __sudo -H pkg upgrade
    #for jid in $(jls jid); do __sudo pkg -j $jid upgrade -y ; done
    #for jid in $(jls jid); do __sudo pkg -j $jid autoremove ; done
  fi
fi
gem update --user-install
npm -g update
apm update --no-confirm
_pip_update pip
_pip_update pip-2.7
_pip_update pip-3.7
#cpan -u
vim -i NONE +PlugUpgrade +qa
(cd ~/.conf && git commit -m "[vim] Update VimPlug config" vim/home/autoload/plug.vim && git push)
vim -i NONE +PlugUpdate +PlugClean! +qa
rustup update
rustup self update
cargo search # update registry
stack upgrade
stack update
R --quiet -e 'options(warn = 0); update.packages(ask = FALSE)'
sudo pkgin -y update
sudo pkgin -y full-upgrade
for lua in luarocks luarocks-5.3
do
  "$lua" install --local $("$lua" list --porcelain --outdated |cut -d '	' -f 1)
done
